<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:weightSum="3">

        <be.vanlooverenkoen.midimacro.ui.controls.ControlButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:midichannel="1"
            app:midicontrol="8" />

        <be.vanlooverenkoen.midimacro.ui.controls.ControlEncoder
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <be.vanlooverenkoen.midimacro.ui.controls.ControlButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:midichannel="1"
            app:midicontrol="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <be.vanlooverenkoen.midimacro.ui.controls.ControlKnob
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="4" />

            <be.vanlooverenkoen.midimacro.ui.controls.ControlKnob
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="3" />

            <be.vanlooverenkoen.midimacro.ui.controls.ControlKnob
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <be.vanlooverenkoen.midimacro.ui.controls.ControlSliderV
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="0" />

            <be.vanlooverenkoen.midimacro.ui.controls.ControlSliderV
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <be.vanlooverenkoen.midimacro.ui.controls.ControlKnob
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="7" />

            <be.vanlooverenkoen.midimacro.ui.controls.ControlKnob
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="6" />

            <be.vanlooverenkoen.midimacro.ui.controls.ControlKnob
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:midichannel="2"
                app:midicontrol="5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>