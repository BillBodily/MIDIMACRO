<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="be.vanlooverenkoen.midi.ui.MainActivity">

    <LinearLayout
        android:id="@+id/fail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Could not connect to the MQTT server"
            android:textStyle="bold" />

        <Button
            android:id="@+id/check_btn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Settings"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/slider_layout"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:rowCount="3">

            <TableRow>
                <!--Row 1-->
                <Button
                    android:id="@+id/midi_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:text="CH1 CC0"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/midi_2_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="CH1 CC1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/midi_3_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="CH1 CC2"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/midi_4_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="CH1 CC3"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <!--Row 2-->
                <Button
                    android:id="@+id/midi_5_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:text="CH1 CC4"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/midi_6_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="CH1 CC5"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/midi_7_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="CH1 CC6"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/midi_8_btn"
                    style="@style/ColoredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="CH1 CC7"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/slider_layout"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <be.vanlooverenkoen.midi.ui.customview.MixerSliderVertical
                android:id="@+id/seekBar1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/title_slider_1"
                android:layout_margin="15dp"
                android:max="127"
                android:padding="25dp" />

            <TextView
                android:id="@+id/title_slider_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:max="127"
                android:text="CH2 CC0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <View
                    android:id="@+id/level1_level7"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_red" />

                <View
                    android:id="@+id/level1_level6"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_orange" />

                <View
                    android:id="@+id/level1_level5"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_orange" />


                <View
                    android:id="@+id/level1_level4"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />


                <View
                    android:id="@+id/level1_level3"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />


                <View
                    android:id="@+id/level1_level2"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />


                <View
                    android:id="@+id/level1_level1"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="CH3 CC0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <View
                    android:id="@+id/level2_level7"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_red" />

                <View
                    android:id="@+id/level2_level6"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_orange" />

                <View
                    android:id="@+id/level2_level5"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_orange" />


                <View
                    android:id="@+id/level2_level4"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />


                <View
                    android:id="@+id/level2_level3"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />


                <View
                    android:id="@+id/level2_level2"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />


                <View
                    android:id="@+id/level2_level1"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_yellow" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="CH3 CC1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <be.vanlooverenkoen.midi.ui.customview.MixerSliderVertical
                android:id="@+id/seekBar2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/title_slider_2"
                android:layout_margin="15dp"
                android:max="127"
                android:padding="25dp" />

            <TextView
                android:id="@+id/title_slider_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="CH2 CC1" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
